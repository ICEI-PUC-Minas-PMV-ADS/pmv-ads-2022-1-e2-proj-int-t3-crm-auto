<!--Container Main start-->
<div id="idContainer">
    <!-- class="bg-light"-->
    <form asp-controller="Oficina" asp-action="OperacaoCadastroVeiculo">
        <div class="row">
            <div class="form-group col-md-3">
                <label for="marcaVeiculo">Marca do veículo</label>
                <select id="marcaVeiculo" class="form-control">
                    <option selected>Selecione a marca...</option>
                    <option value="01">GM - Chevrolet</option>
                    <option value="02">Hyundai</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label for="modeloVeiculo">Modelo do veículo</label>
                <select id="marcaVeiculo" class="form-control" asp-for="Id_Modelo">
                    <option selected>Selecione o modelo...</option>
                    <option value="01">Onix LT</option>
                    <option value="02">Onix LTZ</option>
                    <option value="03">Onix LT Plus</option>
                    <option value="04">Onix LTZ Plus</option>
                    <option value="05">HB20 GDI</option>
                    <option value="06">HB20S Evolution</option>
                    <option value="07">HB20X DIAMOND</option>
                    <option value="08">CRETA DIAMOND PLUS</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-2">
                <label for="motorizacao">Motorização</label>
                <input type="text" class="form-control" id="motorizacao" placeholder="1.0, 2.0..." asp-for="Motorizacao">
            </div>
            <div class="form-group col-md-2">
                <label for="anoFabricacao">Ano fabricação</label>
                <input type="text" class="form-control" id="anoFabricacao" placeholder="1999" asp-for="Ano_Fabricacao">
            </div>
            <div class="form-group col-md-2">
                <label for="anoModelo">Ano modelo</label>
                <input type="text" class="form-control" id="anoModelo" placeholder="2000" asp-for="Ano_Modelo">
            </div>
        </div>

        <div>
            <input type="submit" id="ok" name="ok" class="btn btn-primary" value="Ok">
        </div>
    </form>
</div> <!-- FIM DIV CONTAINER -->