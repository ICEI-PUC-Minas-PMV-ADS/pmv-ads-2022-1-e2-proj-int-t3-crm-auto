@if(TempData["msg"] != null)
   {
     <div id="mensagem">
       <h4>@TempData["msg"]</h4>
     </div>
   }
</div>

@if(TempData["msgDetalhes"] != null)
   {
     <div class="alert alert-light" role="alert">
       <h6>@TempData["msgDetalhes"]</h6>
